<?xml version="1.0"?>
<entity-mappings
	xmlns="http://www.eclipse.org/eclipselink/xsds/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.eclipse.org/eclipselink/xsds/persistence/orm 
	http://www.eclipse.org/eclipselink/xsds/eclipselink_orm_2_1.xsd"
	version="2.1">

	<entity class="fr.formation.entity.Ingredient">
		<table name="ingredient" />
		<attributes>
			<!-- name fais reference a l'id dans la classe ingredient.java -->

			<id name="id">
				<generated-value strategy="IDENTITY" />
			</id>
			<basic name="etat">
				<column name="state" />

			</basic>

			<basic name="name">
				<column name="name" />
			</basic>
		</attributes>
	</entity>


	<entity class="fr.formation.entity.Cocktail">
		<table name="cocktail" />
		<attributes>
			<!-- name fais reference a l'id dans la classe ingredient.java -->

			<id name="id">
				<generated-value strategy="IDENTITY" />
			</id>
			
			<basic name="name">
				<column name="name" />
			</basic>
			
			<basic name="price">
				<column name="price" />
			</basic>
			
			<basic name="withalcohol">
				<column name="withalcohol" />
			</basic>
			
		</attributes>
	</entity>


</entity-mappings>